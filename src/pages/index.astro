---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero/Hero.astro';
import Experience from '../components/Experience/Experiences.astro';
import Projects from '../components/Projects/Projects.astro'
import Skills from '../components/Skills/Skills.astro';
---

<Layout
	title="Home"
	description="My Portfolio"
>
	<Hero animate />
	<Experience animate />
	<Projects animate />
	<Skills animate /> 
</Layout>

<script type="module">
	const observer = new IntersectionObserver((entries) => {
		entries.forEach((entry) => {
			if(entry.isIntersecting) entry.target.classList.add("animate__fadeInUp")
		});
	});
	const toAnimate = document.querySelectorAll('section[animate]');
	toAnimate.forEach(e => observer.observe(e));
</script>
