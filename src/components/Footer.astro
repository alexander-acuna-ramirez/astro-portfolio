---
import Dot from "./icons/Dot.astro";
import GithubLogo from "./icons/GithubLogo.astro";
import LinkedinLogo from "./icons/LinkedinLogo.astro";
---

<footer class="w-full border-t border-[#444444]">
	<div
		class="container my-12 mx-auto flex flex-col md:flex-row justify-between items-start"
	>
		<!-- Left Section -->
		<div class="sm:w-full md:w-2/4 flex flex-row items-start">
			<div>
				<Dot />
			</div>
			<div class="ml-2">
				<h4 class="text-4xl text-bold">Let's Connect</h4>
				<p class="text-gray-500 mt-4">
					Contact me if you are interested on my profile or you have an interesting project.
				</p>
				<div>
					<p>
						Say hello at <a
							href="mailto:alexander.acuna@ucsm.edu.pe"
							class="text-gray-500 hover:text-white"
							>alexander.acuna@ucsm.edu.pe</a>
					</p>
					
					<p>
						For more info, here's my <a href="#" class="text-gray-500 hover:text-white">resume</a>
					</p>
					<div class="flex gap-2">
						<a href="#">
							<GithubLogo class="h-6 w-6 text-gray-500 hover:text-white" /> 
						</a>
						<a href="#">
							<LinkedinLogo class="h-6 w-6 text-gray-500 hover:text-white"/> 
						</a>
					</div>
				</div>
				
			</div>
		</div>

		<!-- Right Section -->
		<div class="sm:w-full md:w-2/4">
			<div class="grid gap-4 gap-y-2 text-sm grid-cols-1">
				<div>
					<label for="full_name">Full Name</label>
					<input
						type="text"
						name="full_name"
						id="full_name"
						class="h-10 mt-1 px-4 w-full bg-transparent border border-gray-500"
						value=""
					/>
				</div>

				<div>
					<label fomd:col-span-1r="email">Email Address</label>
					<input
						type="text"
						name="email"
						id="email"
						class="h-10 mt-1 px-4 w-full bg-transparent border border-gray-500"
						placeholder="email@domain.com"
					/>
				</div>

				<div>
					<label for="subject">Subject</label>
					<input
						type="text"
						name="subject"
						id="subject"
						class="h-10 mt-1 px-4 w-full bg-transparent border border-gray-500"
					/>
				</div>

				<div>
					<label for="message">Message</label>
					<textarea
						name="message"
						id="message"
						class="mt-1 px-4 w-full bg-transparent border border-gray-500"
						rows="4"></textarea>
				</div>
				<div>
					<button
						style="background-color: #CBFE47; color:black; font-weight:bolder;"
      					class="bg-white rounded-lg px-6 py-4 mt-3"
					>
						Get in touch
					</button>
				</div>
			</div>
		</div>
	</div>
	<div
		class="w-full py-6 px-12 flex flex-col justify-between md:flex-row border-t border-[#444444]"
	>
		<ul class="flex flex-row gap-x-4">
			<li><a href="#" class="text-gray-400 hover:text-white">Home</a></li>
			<li>
				<a href="#" class="text-gray-400 hover:text-white">Our team</a>
			</li>
			<li>
				<a href="#" class="text-gray-400 hover:text-white">Contact</a>
			</li>
			<li>
				<a href="#" class="text-gray-400 hover:text-white">Portfolio</a>
			</li>
		</ul>

		<div>
			<span> Copyright Â© Alexander Developer </span>
		</div>
	</div>
</footer>
