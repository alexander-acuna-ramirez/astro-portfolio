---
import HeaderLogo from "./icons/HeaderLogo.astro";
import GithubLogo from "./icons/GithubLogo.astro";
import LinkedinLogo from "./icons/LinkedinLogo.astro";
import MobileMenu from "./MobileMenu.astro";
---

<header
    class="px-6 md:px-12 w-full flex flex-row items-center py-6"
>
    <div class="w-1/3">
        <nav class="hidden md:flex">
            <ul class="flex gap-3">
                <li>
                    <a href="#home" class="hover:text-[#CBFE47] relative w-fit block after:block after:content-[''] after:absolute after:h-[3px] after:bg-[#CBFE47] after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-300 after:origin-center">
                        Home
                    </a>
                </li>
                <li>
                    <a href="#experience" class="hover:text-[#CBFE47] relative w-fit block after:block after:content-[''] after:absolute after:h-[3px] after:bg-[#CBFE47] after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-300 after:origin-center">
                        Experience
                    </a>
                </li>
                <li>
                    <a href="#projects" class="hover:text-[#CBFE47] relative w-fit block after:block after:content-[''] after:absolute after:h-[3px] after:bg-[#CBFE47] after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-300 after:origin-center">
                        Projects
                    </a>
                </li>
                <li>
                    <a href="#contact" class="hover:text-[#CBFE47] relative w-fit block after:block after:content-[''] after:absolute after:h-[3px] after:bg-[#CBFE47] after:w-full after:scale-x-0 after:hover:scale-x-100 after:transition after:duration-300 after:origin-center">
                        Contact Me
                    </a>
                </li>
            </ul>
        </nav>
        <div class="md:hidden">
            <MobileMenu/>
        </div>
    </div>

    <div class="w-1/3 flex justify-center">
        <HeaderLogo class="w-10 md:w-12" />
    </div>

    <div class="w-1/3 flex gap-6 md:gap-4 justify-end">
        <a href="#">
            <GithubLogo class="h-6 w-6 hover:text-[#CBFE47]" />
        </a>
        <a href="#">
            <LinkedinLogo class="h-6 w-6 hover:text-[#CBFE47]" />
        </a>
    </div>
</header>
