---
import HeaderLogo from "./icons/HeaderLogo.astro";
import GithubLogo from "./icons/GithubLogo.astro";
import LinkedinLogo from "./icons/LinkedinLogo.astro";
---

<header
    class="px-6 md:px-12 w-full flex flex-row items-center py-6"
>
    <div class="w-1/3">
        <nav class="hidden md:flex">
            <ul class="flex gap-3">
                <li>Home</li>
                <li>Experience</li>
                <li>Portfolio</li>
                <li>About Me</li>
            </ul>
        </nav>
        <div class="md:hidden">
            <div class="space-y-2 w-12 p-2">
                <span class="block w-8 h-0.5 bg-gray-300"></span>
                <span class="block w-8 h-0.5 bg-gray-300"></span>
                <span class="block w-8 h-0.5 bg-gray-300"></span>
            </div>
        </div>
    </div>

    <div class="w-1/3 flex justify-center">
        <HeaderLogo class="w-10 md:w-12" />
    </div>

    <div class="w-1/3 flex gap-6 md:gap-4 justify-end">
        <a href="#">
            <GithubLogo class="h-6 w-6" />
        </a>
        <a href="#">
            <LinkedinLogo class="h-6 w-6" />
        </a>
    </div>
</header>
