---
import Project from "./Project.astro";
---

<section id="projects" class="flex items-end flex-wrap mt-12 px-6 md:px-12">
  <div class="flex flex-row justify-between items-center w-full mb-12">
    <h2 class="text-3xl md:text-5xl text-bold">My lastest work</h2>

    <button
           class="bg-[#CBFE47] rounded-lg px-6 py-4 mt-4 text-black hover:bg-transparent hover:text-[#CBFE47] hover:outline hover:outline-2 hover:outline-[#CBFE47]"
    >
      Browse Projects
    </button>
  </div>
  <div class="w-full grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-12 md:gap-15">
    <Project />
    <Project />
    <Project />
  </div>
</section>
